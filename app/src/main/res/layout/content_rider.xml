<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.tricloudcommunications.ce.uber.RiderActivity"
    tools:showIn="@layout/activity_rider">

    <Button
        android:text="@string/callUberButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="45dp"
        android:id="@+id/callUberButton"
        android:onClick="callUber"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/riderLogOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/riderLogOutButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textSize="18sp"
        android:onClick="riderLogOut" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:id="@+id/infoTextView"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/callUberButton"
        android:layout_alignBottom="@+id/callUberButton"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_red_light" />
</RelativeLayout>